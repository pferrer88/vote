<%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name), :namespace => 'reg_form' do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :required => true, :input_html => { :size => 15 } %>
    <%= f.input :lastName, :required => true, :input_html => { :size => 15 } %>
    <%= f.input :bday, :as => :date %>
    <%= f.input :city, :required => true, :input_html => { :size => 15 }%>
    <%= f.input :state, :required => true %>
    <%= f.input :phone, :as => :phone, :input_html => { :size => 15 } %>
    <%= f.input :email, :as => :email, :required => true %>
    <%= f.input :password, :required => true, :input_html => { :size => 15 } %>
    <%= f.input :password_confirmation, :required => true, :input_html => { :size => 15 } %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button :button_html => { :class => "btn", :disable_with => 'Espera...', :value => "Registrar"} %>
  <% end %>

<% end %>


