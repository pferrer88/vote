<% unless flash[:notice].blank? %>
  <div data-alert="alert" class="alert-message info fade in">
		<a class="close" href="#">×</a>
    <%= content_tag :div, flash[:notice] %>
  </div>
<% end %>

<% unless flash[:error].blank? %>
  <div data-alert="alert" class="alert-message error fade in">
		<a class="close" href="#">×</a>
    <%= content_tag :div, flash[:error] %>
  </div>
<% end %>

<% unless flash[:alert].blank? %>
  <div data-alert="alert" class="alert-message warning fade in">
		<a class="close" href="#">×</a>
    <%= content_tag :div, flash[:alert] %>
  </div>
<% end %>