.intro
	/.fb-login-button{:data => {:scope => "email", :width => "200", :show => {:faces => "true" }, :max =>{:rows => "1"} } }
	= link_to "Ingresa con Facebook", user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-large facebook_btn", :data => {:loading_text => "Ingresando..."}
	No tienes cuenta? 
	= link_to "Registrate", new_user_registration_path 
= simple_form_for(User.new, :as => :user, :url => session_path(:user), :html => { :class => 'form-horizontal' }) do |f|
	.inputs
		= f.input :login, :required => true, :autofocus => true, :class =>"span3"
		= f.input :password, :required => true
		/ = f.input :remember_me, :as => :boolean if devise_mapping.rememberable? 
	.actions
		= f.button :submit, "Ingresa", :class =>"btn btn-large btn-success"
/ .modal-footer
/ 	%a.btn{:data => {:dismiss => "modal"}} Cerrar