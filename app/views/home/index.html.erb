<% if !user_signed_in? %>

	<div id="left">
		<%= render 'shared/register' %>
	</div>
	
	<div id="right">
		<div id="thermometer_container">
			
			<div class="progressbar">
			 <span class="progressbar-value">
			  <em class="progressbar-cover" style="height:<%= @users.count %>px;"></em>
			 </span>
			</div>
			<h3> Hasta ahora somos <%= @users.count %> </h3>
		</div>
	</div>
	
<% else %>	
	<div id="profile">
		<div id="invite_form">
			<h5>Invita a un amigo</h5>
			<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :class => "inline"} do |f| %>
			  <%= devise_error_messages! %>
		
			  <p><%= f.label :name %>
			  <%= f.text_field :name %></p>

				<p><%= f.label :lastName %>
			  <%= f.text_field :lastName %></p>

				<p><%= f.label :email %>
			  <%= f.text_field :email %></p>

			  <p><%= f.submit "Enviar", :class => "btn"  %></p>
			
			<% end %>
			

		</div>
	  <div id="invite_table">
			<table class="bordered-table">
				<tr>
					<th>Nombre</th>
					<th>Confirmado</th>
				</tr>
				<% @invites.each do |invite| %> 
					<tr>
						<td><%= invite.name %> <%= invite.lastName %></td>
						<td>
							<% if invite.comfirmed %>
							 	Si
							<% else%>
								No
							<% end %>
						</td>
					</tr>
				<% end %>
			</table>
		</div><!-- invite_table -->
	</div><!-- profile -->
<% end %>

