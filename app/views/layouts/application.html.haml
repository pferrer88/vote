!!!
%html{:lang => "es"}
	%head
		%meta{:charset => "utf-8"}/
		%title= yield(:title) || "Embajadores Del Voto - Vota fuera de Venezuela"
		%meta{:content => "Somos un grupo de jóvenes venezolanos de distintas organizaciones (Voto Joven, MUD, Venmundo, etc.) ubicados en el área de NY. Juntos formamos un movimiento llamado “Embajadores del Voto”, que busca promover el voto en el exterior.", :name => "description"}/
		%meta{:content => "Pedro L. Ferrer", :name => "author"}/
		%meta{:content => "IQzRMJ0h6xuzyVEP7PJLLJosnTqDWVCQbfT3iJE-qg0", :name => "google-site-verification"}/
		%meta{:content => "YsNJTLVBEK6IfV2RfSMdFzykgEU8Zefk-mkyiQ4cKSI", :name => "google-site-verification"}/
		%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
		/ Le HTML5 shim, for IE6-8 support of HTML elements
		/[if lt IE 9]
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		/ Le styles
		= stylesheet_link_tag		 "application", :media => "all" 
		= javascript_include_tag "application"	
		= csrf_meta_tags
		%script
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-28600130-1']);
			_gaq.push(['_setDomainName', 'embajadordelvoto.org']);
			_gaq.push(['_trackPageview']);

			(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		/ Le fav and touch icons
		%link{:href => "/assets/favicon.ico", :rel => "shortcut icon"}/
		/ %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
		/ %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
		/ %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
	%body{:class => params[:controller]}
		#fb-root
		%script
			(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
			fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));

		- if !user_signed_in?
			.topbar-home
				.fill
					.container	
						.row
							.span4
								#MainTitle
									%h1
										%span#logo 
											Embajadores 
											%b Del Voto
							.span7
								#home_menu_wrap
									%ul.nav.nav-pills

										%li{:class => ("active" if params[:controller] == "home")}
											= link_to 'Home', main_app.root_path, :class => "homelink"
										%li
											= link_to '¿Quienes Somos?', main_app.about_index_path, :class => "aboutlink"
										%li
											= link_to 'Informacion Electoral', main_app.information_index_path, :class => "informationlink"
										%li
											= link_to 'Contacto', main_app.contact_index_path, :class => "contactlink"		
										%li.dropdown
											= link_to "Foro", forem.root_path, :class => "forumlink"
						.row
							.span4
								= render 'shared/session'
							.span7
								%p.head
									%strong Somos
									un grupo de
									%strong jóvenes venezolanos
									de distintas organizaciones (Voto Joven, MUD, Venmundo, etc.) ubicados en el área de NY. Juntos formamos un movimiento llamado “Embajadores del Voto”, que
									%strong busca promover el voto en el exterior

			.container
				.row
					.span11
						= render :partial => "shared/flash_messages", :locals => {:flash => flash}
						= yield
					/ span
				/ row
				.row
					%hr.span11
				.row
					%footer.span11
						%p &copy; Embajadores del Voto es una iniciativa de Venezolanos en el Exterior (Venex-NY) Nueva York y Voto Joven 2012

		- else
			.navbar.navbar-fixed-top
				.navbar-inner
					.container-fluid
						%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
							%span.icon-bar
							%span.icon-bar
							%span.icon-bar
						%a.brand{:href => "/"} 
							Embajadores Del Voto
						.nav-collapse
							%ul.nav
								%li
									= link_to 'Home', main_app.root_path
								%li
									= link_to '¿Quienes Somos?', main_app.about_index_path
								%li
									= link_to 'Informacion Electoral', main_app.information_index_path
								%li
									= link_to 'Contacto', main_app.contact_index_path		
								%li
									= link_to "Foro", forem.root_path
												
							%p.navbar-text.pull-right
								= render :partial => "shared/session"
			.container-fluid
				.row-fluid
			
					.span3
						.well.sidebar-nav
							%ul.nav.nav-list
								%li.nav-header
									= image_tag current_user.fb_image unless current_user.fb_image==nil
									/ %p.profile_info
									= link_to current_user.name + " " + current_user.lastName, main_app.user_path(current_user)
									%b
									= current_user.city 
									, 
									= current_user.state.short if current_user.state
								/ %span.badge.badge-success.pull-right
								/ 	= current_user.points
									
								%li.divider
								%li.active
									= link_to main_app.root_path do
										%i.icon-home 
										Inicio
								%li
									= link_to main_app.user_path(current_user) do
										%i.icon-user
										Mis Datos
								%li
									= link_to main_app.red_user_path(current_user) do
										%i.icon-heart
										Mis Registrados
								%li
									= link_to main_app.products_path do
										%i.icon-shopping-cart
										Tienda
								
								%li
									= link_to forem.root_path do
										%i.icon-comment
										Foro
									
								
								- if current_user.forem_admin								
									%li.nav-header
										Settings
								- if current_user.forem_admin		
									%li
										= link_to "Foro", forem.admin_root_url
									
						/ /.well
						#invite_form.well
							%h4 Invita a un amigo
							%hr
							= simple_form_for(resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :class => "form-inline"}) do |f|
								= f.input :name, :required => true, :autofocus => true, :input_html => {:class => "input-medium"}
								= f.input :lastName, :required => true, :input_html => {:class => "input-medium"}
								= f.input :email, :required => true, :input_html => {:class => "input-medium"}
								.form-actions
									= f.button :submit, "Invitar", :class =>"btn btn-primary"
					/ /span3
					.span9
						= render :partial => "shared/flash_messages", :locals => {:flash => flash}
						= yield
					/ span
				/ row
				.row
					%hr
				.row
					%footer.span11
						%p &copy; Embajadores del Voto es una iniciativa de Venezolanos en el Exterior (Venex-NY) Nueva York y Voto Joven 2012

		-if current_user == nil
			#registrar.modal.hide.fade
				.modal-header
					%a.btn.close{:data => {:dismiss => "modal"}} x
					%h3 Registrate
				.modal-body
					= render :partial => "shared/register"
					
